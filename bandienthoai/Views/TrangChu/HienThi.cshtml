@using bandienthoai.Models
@model IEnumerable<SACH>
@{
    ViewBag.Title = "HienThi";
    Layout = "";

}

<h2>ĐÂY LÀ TRANG CHỦ</h2>
<div class="row">
    @foreach (var sach in Model)
    {

        <div class="card col-sm-4 col-md-4 col-lg-4 d-flex align-items-stretch book-
section">

            <a href="@Url.Action("Details", "BookStore", new { id = sach.Masach })">
                <img class="card-img-top book-picture h-100" 
                     src="~/Image/@sach.Hinhminhhoa" alt="Card image">
            </a>
            <div class="card-body">
                <h4 class="card-title">@sach.Tensach</h4>
                <p class="card-text">@sach.Dongia</p>
            </div>
        </div>
    }
</div>

